{
  "name": "fire-incident-mini-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup:dev": "node ./scripts/setup-and-run.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build && cd ../backend && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix && cd ../backend && npm run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:all": "npm run test:frontend && npm run test:backend",
    "test:watch": "concurrently \"npm run test:frontend -- --watch\" \"npm run test:backend -- --watch\"",
    "validate": "npm run format:check && npm run lint && npm run test:all",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "backend/**/*.{js,ts}": [
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
